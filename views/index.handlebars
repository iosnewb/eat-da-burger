<h1>Eat da Burger!</h1>

<div class="row">
  <div class="col-md-6">
    <ul>
      {{#each burger}}
        {{#unless this.devoured}}
          <p>
            {{this.burger_name}}
          </p>

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devour" value="false">
              <button type="submit">DEVOUR IT!</button>
            </form>
          
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <ul>
      {{#each burger}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class ="row" id="add-burger">
<h2>Enter a burger you want to eat and click on the "Submit" button</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit" id="add-button">Add Burger</button>
</form>
</div>