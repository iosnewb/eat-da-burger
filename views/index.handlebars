<h1>Eat da Burger!</h1>

<ul>
  {{#each cats}}
    {{#unless this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">DEVOUR IT!</button>
        </form>

        {{!--{{> cats/delete-cat}}--}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

